<Window x:Class="SIAN.Views.AnalitikViews.AnalitikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIAN.Views.AnalitikViews"
        xmlns:extensions="clr-namespace:SIAN.Services"
        mc:Ignorable="d"
        Title="AnalitikWindow" WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Width="1000"
        Height="600" Icon="/Sourses/SIAN-logo-white.png">

    <DockPanel Background="#1E1E1E" 
               Margin="7">

        <Border Height="28"
                Background="#252525"
                DockPanel.Dock="Top"
                MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="AnalitikMenu"
                           Foreground="LightGray"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="100 0 0 0"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 0 4 0"
                            >

                    <Button Content="🗕" 
                            Padding="0 0 0 3"
                            Name="BTMinimazeApp"
                            Click="BTMinimazeApp_OnClick"
                            Style="{StaticResource TitleBarStyle}"/>
                    <Button Content="🗖" 
                            Padding="0 0 0 3"
                            Name="BTMAximazeApp"
                            Click="BTMAximazeApp_OnClick"
                            Style="{StaticResource TitleBarStyle}"/>
                    <Button Content="🗙" 
                            Padding="0 0 0 3"
                            Name="BTCloseApp"
                            Click="BTCloseApp_OnClick"
                            Style="{StaticResource TitleBarStyle}"/>

                </StackPanel>

            </Grid>

        </Border>

        <Border Width="48" 
                HorizontalAlignment="Left"
                Background="#252525">

            <Border.Style>
                <Style>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Border.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Width)" 
                                                         To="175"
                                                         Duration="0:0:.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Width)" 
                                                         To="48"
                                                         Duration="0:0:.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel>
                <RadioButton Content="Задания"
                             extensions:Extensions.Icon="🖊" 
                             Padding="5.6 , 3.5 ,8 ,2"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             
                             Name="RBStatiscikPage"
                             Checked="RBStatiscikPage_OnChecked"
                             Cursor="Hand"/>
                <RadioButton Content="Личный кабинет"
                             extensions:Extensions.Icon="💁" 
                             Padding="5.6 , 3.5 ,8 ,2"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Name="RBKabinet"
                             Checked="RBKabinet_OnChecked"
                             
                             />
                <RadioButton Content="Выйти"
                             extensions:Extensions.Icon="🚪" 
                             Margin="0 435 0 0"
                             
                             Padding="9.6 2.5 8 0"
                             FontSize="16"
                             FontWeight="Normal"
                             Foreground="LightGray"
                             Name="RBExit"
                             Checked="RBExit_OnChecked"
                             Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Frame Name="FrameContent"
               NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>